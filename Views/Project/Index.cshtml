@using EF_MVC_Repository_UOW.Models;
@model IQueryable<EF_MVC_Repository_UOW.Models.Project>
<h2>Projects</h2>
<table style="border:groove">
    <tr>
        <td width="150px"><b>Project Name </b></td>
        <td width="100px"><b>Start Date</b></td>
        <td width="100px"><b>End Date</b></td>
        <td width="200px"><b><b>Customers Name</b></td>
    </tr>
    @using (Html.BeginForm("Delete", "Project", FormMethod.Post, null))
    {

        foreach (Project p in @Model)
        {
            <tr style="height:30px">
                <td width="100px">@Html.ActionLink(@p.ProjectName, "Edit", new { t = "edit", id = p.ProjectID, proj = p })</td>
                @*<td width="100px"><label>@p.ProjectName</label></td>*@
                <td width="150px"><label>@p.StartDate</label></td>
                <td width="100px"><label>@p.EndDate</label></td>
                <td width="100px"><label>@p.CustomerName</label></td>
                <td width="200px"><button type="submit" name="submit" value="@p.ProjectID">Delete</button></td>

            </tr>
        }

    }
    <tr>
        <td>
            Click the project name to Edit
        </td>
    </tr>
</table>
@Html.ActionLink("Add Project", "Create")




